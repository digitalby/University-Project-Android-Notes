<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.digitalby.lr3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="me.digitalby.lr3.EditorActivity" android:parentActivityName="me.digitalby.lr3.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="me.digitalby.lr3.MainActivity"
                />
        </activity>
        <activity android:name="me.digitalby.lr3.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="me.digitalby.lr3.NotesProvider"
            android:authorities="me.digitalby.LR3.notesprovider"
            android:exported="false" />
    </application>

</manifest>